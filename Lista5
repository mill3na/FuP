#QUESTÃO 1
matriz=[]
impares=0
q_linhas=int(input())
q_colunas=int(input())
for i in range(q_linhas):
    lista=[]
    for j in range(q_colunas):
        x=int(input())
        lista.append(x)
        if x%2 != 0:
            impares +=1
     matriz.append(lista)
print(matriz)
print(impares)

